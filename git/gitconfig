[user]
  name = Juan Manuel Rey
  email = juanmanuel.reyporal@gmail.com

[core]
  excludesfile = /Users/jrey/.gitignore_global
  editor = atom --wait

[push]
  default = simple

[color]
  ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[alias]
  # Add
	a  = add
	aa = add -A

	# Branch
	b  = branch
	ba = branch -a

	# Checking out
	co = checkout
	cb = checkout -b
	cm = checkout master

	# Commit
	ci  = commit -v
	cim = commit -v -m
	rc  = commit --amend -v

	# Diff
	d  = diff
	dc = diff --cached

	# Fetch
	f = fetch

	# Log
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --stat --abbrev-commit

	# Push
	p  = push
	pf = push -f

	# Pull
	pl = pull
  pr = pull-request

	# Rebase
	rbm = rebase master
	rbc	= rebase --continue
	rbi	= rebase -i

	# Reset
	unstage  = reset HEAD
	uncommit = reset --soft HEAD^

	# Status
	s = status -sb

[github]
	user = jreypo

[pull]
	rebase = true
