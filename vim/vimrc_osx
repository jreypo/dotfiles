" General configuration

set nocompatible

" Theme and colors configuration

set t_Co=256
syntax on
colorscheme wombat256mod
set background=dark

" Vim interface

set number
set ruler
set visualbell
set ignorecase
set nohlsearch
set laststatus=2
set helplang=en
set langmenu=none
set cul

" Format text 

set mouse=a
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set nowrap
set autoindent

" Powerline support

" python from powerline.vim import setup as powerline_setup
" python powerline_setup()
" python del powerline_setup
set rtp+=/usr/local/lib/python2.7/site-packages/powerline/bindings/vim/
